<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivityUsers"
    tools:showIn="@layout/app_bar_main_users"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <EditText
        android:id="@+id/editText2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignEnd="@+id/btn_Book"
        android:layout_alignRight="@+id/btn_Book"
        android:background="@drawable/white_border"
        android:ems="10"
        android:inputType="textAutoComplete"
        android:padding="10sp"
        android:text="@string/etfromlaction" />

    <Button
        android:id="@+id/button3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btntolocation"
        android:layout_alignBottom="@+id/btntolocation"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:background="@drawable/bg_rectangle_textview"
        android:padding="10dp"
        android:text="@string/fromlocation"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btntolocation"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lin1"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rectangle_textview"
        android:padding="10dp"
        android:text="@string/tolocation"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btntolocation"
        android:layout_marginTop="12dp"
        android:background="@drawable/white_border"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10sp"
        android:text="@string/ettolocation" />

    <LinearLayout android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical">


            <Spinner
                android:id="@+id/SP_CARKIND"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:autofillHints="@string/car_spinner"
                android:prompt="@string/car_spinner"
                android:textColorHint="@color/colorPrimaryDarker"
                 />



        <Spinner
            android:id="@+id/SP_FACE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:autofillHints="@string/face_spinner"
            android:prompt="@string/face_spinner"

            android:textColorHint="@color/colorPrimaryDarker"
             />

    </LinearLayout>

    <Button
        android:id="@+id/btn_Book"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_Location"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_rectangle_textview"
        android:padding="10sp"
        android:text="@string/btn_show_driver"
        android:textColor="@color/white"
        android:textSize="@dimen/med_txt_size" />

    <Button
        android:id="@+id/btn_Location"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_rectangle_textview"
        android:padding="10sp"
        android:text="@string/pick_place"
        android:textColor="@color/white"
        android:textSize="@dimen/med_txt_size" />


    <!--
-->

</RelativeLayout>
